<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    tools:context=".cameraFragment.PreviewFragment">
    <ImageButton
        android:id="@+id/back_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/margin_xsmall"
        android:layout_marginTop="@dimen/margin_xsmall"
        android:layout_width="@dimen/round_button_small"
        android:layout_height="@dimen/round_button_small"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/ic_back" />

    <ImageButton
        android:id="@+id/save_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf ="parent"
        android:layout_marginEnd="@dimen/margin_xsmall"
        android:layout_marginTop="@dimen/margin_xsmall"
        android:layout_width="@dimen/round_button_small"
        android:layout_height="@dimen/round_button_small"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/ic_save" />

    <ImageView
        android:id = "@+id/image_view"
        android:scaleType="fitCenter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        android:id="@+id/coordinatorLayout">

        <LinearLayout
            android:id="@+id/button_sheet_image_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#65009688"
            android:orientation="vertical"
            app:behavior_hideable="false"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            app:behavior_peekHeight="80dp"
            tools:layout_conversion_absoluteHeight="92dp"
            tools:layout_editor_absoluteY="651dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_conversion_absoluteWidth="411dp">

            <TextView
                android:id="@+id/textView_basic_metadata_preview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:alpha="255"
                android:drawableLeft="@drawable/ic_baseline_exposure_36"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="Placeholder"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#000000"
                android:textColorLink="#000000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView_other_metadata_preview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:alpha="255"
                android:drawableLeft="@drawable/ic_baseline_camera_36"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="Placeholder"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#000000"
                android:textColorLink="#000000"
                android:textSize="24sp" />

            <fragment
                android:id="@+id/map_preview"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="10"
                tools:context=".MainActivity" />
            <!--            <com.google.android.material.appbar.AppBarLayout-->
            <!--                android:id="@+id/app_bar"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:background="@android:color/transparent"-->
            <!--                android:minHeight="?attr/actionBarSize"-->
            <!--                app:elevation="0dp"-->
            <!--                >-->

            <!--                <androidx.appcompat.widget.Toolbar-->
            <!--                    android:id="@+id/my_toolbar"-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="match_parent"-->
            <!--                    android:background="@android:color/transparent"-->
            <!--                    app:contentInsetEnd="0dp"-->
            <!--                    app:contentInsetStart="0dp" />-->


            <!--            </com.google.android.material.appbar.AppBarLayout>-->

        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</androidx.constraintlayout.widget.ConstraintLayout>